{
    "name": "fesor/projec-template",
    "license": "MIT",
    "type": "project",
    "description": "Basic API project template",
    "autoload": {
        "psr-4": { "App\\": "src/" },
        "classmap": [ "app/AppKernel.php", "app/AppCache.php" ]
    },
    "autoload-dev": {
        "psr-4": {"Tests\\": "tests"},
        "files": [ "vendor/symfony/symfony/src/Symfony/Component/VarDumper/Resources/functions/dump.php" ]
    },
    "require": {
        "php": ">=7.1.0",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/orm": "^2.5",
        "sensio/distribution-bundle": "^5.0.19",
        "sensio/framework-extra-bundle": "^5.0.0",
        "symfony/monolog-bundle": "^3.1.0",
        "symfony/polyfill-apcu": "^1.0",
        "symfony/swiftmailer-bundle": "^2.6.4",
        "symfony/symfony": "3.4.*",
        "twig/twig": "^1.0||^2.0",
        "doctrine/doctrine-cache-bundle": "^1.3",
        "doctrine/doctrine-migrations-bundle": "~1.2.0",
        "fesor/request-objects": "^0.2.1",
        "friendsofsymfony/rest-bundle": "^2.1",
        "samj/fractal-bundle": "^0.3.0",
        "lexik/jwt-authentication-bundle": "^2.0",
        "symfony/dotenv": "^3.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "~2.0",
        "phpunit/phpunit": "^5.6",
        "symfony/phpunit-bridge": "^3.0",
        "doctrine/doctrine-fixtures-bundle": "^2.3",
        "fzaninotto/faker": "^1.7"
    },
    "scripts": {
        "start": [
            "composer install",
            "docker-compose up -d",
            "docker-compose run --rm php bin/wait_for_db",
            "docker/shortcuts/console doctr:migration:migrate -n --allow-no-migration",
            "docker/shortcuts/console doctrine:fixtures:load -n --fixtures tests/Fixtures/ORM"
        ],
        "prepare-project": [
            "ln -sf `pwd`/docker/scripts/hooks/pre-commit .git/hooks/pre-commit"
        ],
        "symfony-scripts": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget",
            "@prepare-project"
        ],
        "post-install-cmd": [
            "@symfony-scripts"
        ],
        "post-update-cmd": [
            "@symfony-scripts"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    }
}
